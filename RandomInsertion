import math
import glob
import copy
from tracemalloc import start
import time
import random

#Transform coordinate data into connected graph (list in format [u, v, weight])
class Graph:

    def buildGraph(self, input):
        lines = input.readlines()

        #determine what line the coordinate data starts and ends on (some files have extra blank lines at the end)
        #node_data_start = 0
        node_data_end = 0
        while lines[node_data_end].split()[0] != 'EOF':
            if lines[node_data_end].split()[0] == 'NODE_COORD_SECTION':
                node_data_start = node_data_end
            node_data_end += 1

        #determine weight type (always on line 4)
        line_4 = lines[4].split()
        weight_type = line_4[len(line_4)-1]
        connected_graph = []
        vertex= []
        
        
        #create a connected graph by looping through each node and connecting it to all other nodes
        #calculate the weight between each node depending on the weight_type defined in the graph
        for iterate in range(node_data_start+1, node_data_end):
            
            node_u = int(lines[iterate].split()[0])
            u_x1_coord = float(lines[iterate].split()[1])
            u_y1_coord = float(lines[iterate].split()[2])
            vertex.append(node_u)

            for interate_v in range(node_data_start+1, node_data_end):
                node_v = int(lines[interate_v].split()[0])
                if node_u == node_v: #do nothing
                    1
                elif node_u != node_v: 
                    #node_v = int(lines[interate_v].split()[0])
                    v_x2_coord = float(lines[interate_v].split()[1])
                    v_y2_coord = float(lines[interate_v].split()[2])
                    weight_uv = self.weight(weight_type, u_x1_coord, v_x2_coord, u_y1_coord, v_y2_coord)
                    connected_graph.append([node_u,node_v,weight_uv])
            
        return(connected_graph, vertex)


    def weight(self, weight_type, x1, x2, y1, y2):

        if weight_type == 'EUC_2D':
           weight = int(math.sqrt((x2 - x1) **2 + (y2 - y1) **2)) 
        elif weight_type == 'GEO':
            PI = 3.141592
            RRR = 6378.388
            # x = latitude
            # y = longitude

            new_x1 = PI * (int(x1) + 5.0 *  (x1 - int(x1)) / 3.0) / 180.0
            new_x2 = PI * (int(x2) + 5.0 *  (x2 - int(x2)) / 3.0) / 180.0
            new_y1 = PI * (int(y1) + 5.0 *  (y1 - int(y1)) / 3.0) / 180.0
            new_y2 = PI * (int(y2) + 5.0 *  (y2 - int(y2)) / 3.0) / 180.0

            q1 = math.cos( new_y1 - new_y2 ); 
            q2 = math.cos( new_x1 - new_x2 ); 
            q3 = math.cos( new_x1 + new_x2 ); 

            weight = int ( RRR * math.acos( 0.5*((1.0+q1)*q2 - (1.0-q1)*q3) ) + 1.0)

        return weight

def minDist(p, g, l):
    dist= math.inf
    node= p[-1]
    vertex=None
    i=(l-1)*(node-1)
    while(i<(l-1)*node):
        if g[i][2]<dist and g[i][1] not in p:
            dist=g[i][2]
            vertex=g[i][1]
        i=i+1
    return dist,vertex

# Function to get dist distance:
# Input: Graph, node from, node to
# Output: Weight
def u_v_dist(graph, u, v):
    w = 0
    for i in graph:
        if i[0] == u and i[1] == v:
            w = i[2]
    return w

# Function to return node connected by lowest cost edge
# Input: Graph and node from
# Output: Node connected by lowest edge
def u_low_dist(graph, u):
    new_node = 0
    
    min_ = math.inf
    for i in graph[(u-1)*(length-1):u*(length-1)]:
            # iI weight is lower
            if i[2] <= min_:
                # Save lowest weight
                min_ = i[2]
                # Save node connected by lowest cost edge
                new_node = i[1]
    return new_node

# Function to apply Random Insertion algorithm
# Input: Graph, vertices
# Output: Sum of weights, Timer 

def random_init(graph, vertex):
    # Start time point
    Tik = time.time()


    # Variable of length of vertex
    length = len(vertex)
    # List to keep partial circuit
    path = []
    # List to keep unvisited nodes (copy of whole nodes)
    unvisitied = copy.deepcopy(vertex)

    
    # Add first node to path from unvisited list 
    path.append(unvisitied[0])
    # Remove first node from unvisited list 
    unvisitied.remove(path[0])

    # Variable of lowest cost node to fisrt
    j = u_low_dist(graph, path[0])
            
    # Update path
    path.append(j)
    # Remove J from unvisited list
    unvisitied.remove(j)

    # While there are unvisited nodes
    while len(unvisitied) > 0:
        # Initital minimum to + inf
        min_ = math.inf
        # Temporary variable to keep node with lowest cost edge 
        flag = 0
        
        # Take random node from unvisited list
        k = random.choice(unvisitied)
        
        # Cycle through all partial circuit
        for i in path:
            # Check all nodes except last one
            if i != j:
                # Variable to keep result of triangle equations
                triangle = u_v_dist(graph, i, k) + u_v_dist(graph, k, j) - u_v_dist(graph, i, j)
                # If result of triangle equation lower than min
                if triangle < min_:
                    # Keep new min
                    min_ = triangle
                    # Keep the node that goes before k
                    flag = i
                
            
        # Add k node after i from cycle (flag)
        path.insert( path.index(flag) + 1, k)
        # Remove k from unvisited list
        unvisitied.remove(k)

    # Variable to keep distance between nodes
    dist = 0
    # Cycle for weight
    # From 0 to len - 1 
    # Get result of sum of weights of nodes with index_i and index_i_+_1
    for i in range(len(path) - 1):
        dist += u_v_dist( graph, path[i], path[i+1] )
    
    # End time point
    Toc = time.time()
    # Time of Execution 
    timer = Toc - Tik
    
    print("Path: ", path)
    return  dist, timer 


data = [
    #["/Users/sanjartlepin/Downloads/AA/tsp_dataset/burma14.tsp", 3323],
